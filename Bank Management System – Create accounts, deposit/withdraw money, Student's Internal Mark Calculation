#include <iostream>
using namespace std;

/* ---------- BANK MANAGEMENT SYSTEM ---------- */
class BankAccount {
private:
    int accNo;
    string name;
    double balance;

public:
    void createAccount() {
        cout << "\nEnter Account Number: ";
        cin >> accNo;
        cout << "Enter Name: ";
        cin.ignore();
        getline(cin, name);
        cout << "Enter Initial Balance: ";
        cin >> balance;
        cout << "Account Created Successfully!\n";
    }

    void deposit() {
        double amt;
        cout << "Enter amount to deposit: ";
        cin >> amt;
        balance += amt;
        cout << "Amount Deposited Successfully!\n";
    }

    void withdraw() {
        double amt;
        cout << "Enter amount to withdraw: ";
        cin >> amt;
        if (amt <= balance) {
            balance -= amt;
            cout << "Withdrawal Successful!\n";
        } else {
            cout << "Insufficient Balance!\n";
        }
    }

    void display() {
        cout << "\nAccount Number: " << accNo;
        cout << "\nName: " << name;
        cout << "\nBalance: â‚¹" << balance << endl;
    }
};

/* ---------- STUDENT INTERNAL MARK CALCULATION ---------- */
void studentMarks() {
    float test, assignment, attendance, total;

    cout << "\nEnter Test Marks (out of 50): ";
    cin >> test;
    cout << "Enter Assignment Marks (out of 30): ";
    cin >> assignment;
    cout << "Enter Attendance Marks (out of 20): ";
    cin >> attendance;

    total = test + assignment + attendance;

    cout << "\nTotal Internal Marks: " << total << " / 100\n";
}

/* ---------- MAIN MENU ---------- */
int main() {
    BankAccount acc;
    int choice;

    do {
        cout << "\n===== MAIN MENU =====";
        cout << "\n1. Create Bank Account";
        cout << "\n2. Deposit Money";
        cout << "\n3. Withdraw Money";
        cout << "\n4. Display Account Details";
        cout << "\n5. Student Internal Mark Calculation";
        cout << "\n6. Exit";
        cout << "\nEnter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1: acc.createAccount(); break;
            case 2: acc.deposit(); break;
            case 3: acc.withdraw(); break;
            case 4: acc.display(); break;
            case 5: studentMarks(); break;
            case 6: cout << "\nThank You!\n"; break;
            default: cout << "\nInvalid Choice!\n";
        }
    } while (choice != 6);

    return 0;
}
